<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/matchMatch"
    android:background="@color/white"
    >
    <com.gst.frame.custom.CustomScrollView
        android:id="@+id/cs_scrollview"
        style="@style/matchMatch">

        <RelativeLayout
            style="@style/matchMatch">

            <RelativeLayout
                android:id="@+id/rl_pic"
                android:layout_width="match_parent"
                android:layout_height="163dp">

            <ImageView
                android:id="@+id/iv_network"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/hl_scrollview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_pic"
                >

                <RelativeLayout
                    style="@style/matchMatch">

                    <LinearLayout
                        android:id="@+id/ll_add_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        ></LinearLayout>

                    </RelativeLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tv_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/red"
                android:textSize="30sp"
                android:layout_below="@id/hl_scrollview"/>

        </RelativeLayout>

    </com.gst.frame.custom.CustomScrollView>

</RelativeLayout>
